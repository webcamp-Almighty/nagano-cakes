<div class="container">
	<div class="row">
		<h3>ショッピングカート</h3>
		<div class="col-md-2 col-md-offset-10">
			<%= link_to 'カートを空にする', cart_items_delete_path, method: :delete, class: "btn btn-default btn-danger" %>
		</div>
	</div>
	<div class="row">
<table class="col-md-12">
	<thead>
	<tr>
		<th>商品名</th>
		<th>単価(税込)</th>
		<th>数量</th>
		<th>小計</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	<% @cart_items.each do |cart_item| %>
	<tr>
		<td>
			<%= attachment_image_tag cart_item.item, :image, size: "50x40", class: "img-rounded pull-left", fallback: "no_image.jpg" %>
			<%= cart_item.item.name %>
		</td>
		<td><%= cart_item.item.price %></td><!-- ここは税込価格で表示されるよう計算式?を記入してください -->
		<td>
			<%= cart_item.number %>
			<%= link_to "変更", items_path, class: "btn btn-default btn-primary" %>
		</td>
		<td>ここにカートに入れた小計が入ります</td><!-- ここは税込価格と数量の積 -->
		<td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-default btn-danger" %>
</td>
	</tr>
	<% end %>
	</tbody>
</table>
</div>

<div class="row">
	<%= link_to "買い物を続ける", items_path, class: "btn btn-default btn-primary" %>

	<table class="col-md-2 col-md-offset-10">
		<tr>
			<td>合計金額</td>
			<td>ここに合計金額です</td>
		</tr>
	</table>
</div>

	<div class="row">
		<div class="col-md-2 col-md-offset-5">
			<%= link_to "情報入力に進む", new_order_path, class: "btn btn-lg btn-success" %>
		</div>
	</div>
</div>
