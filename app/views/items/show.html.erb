<div class="row">
	<!--ジャンル検索の場合は、ジャンル一覧を表示する-->

	<div class="col-xs-4">

		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">ジャンル検索</h3>
		  </div>
		  <div class="panel-body">  <!--borderが消えない-->
		    <table class="table table-borderless">

			  <tbody>
			  		<% @genres.each do |genre| %>
			  		<tr>
			  		  <td>
			  			<!--遷移先はジャンル一覧-->
				  		<%= link_to genre.name, '#' %>
				  	  </td>
			  		<% end %>
			  		</tr>
			  </tbody>
			</table>
		  </div>
		</div>

	</div>

	<div class="col-xs-4">

		<div class=""><!--画像サイズについて確認-->

		    <%= attachment_image_tag(@item, :image, :fill, 50, 50, fallback: 'no_image.jpg', size: '300x200') %>
		</div>
	</div>

	<div class="col-xs-4"><!--文字の大きさを変更する-->
		<h3><%= @item.name %></h3>

		<%= @item.introduction %><br>

		¥<%= converting_to_jpy(@item.price) %>(税込)

		<!--カートに入れる.ボタンの位置を調整する必要あり-->
		<%= form_for(@cart_item, url: '/cart_items') do |f| %>
			<%= f.hidden_field :item_id, :value => @item.id %>
			<%= f.select :number, [['個数選択',''],['１個',1],['２個',2],['３個',3],['４個',4],['５個',5]] %>
			<%= f.submit "カートに入れる", class: "btn btn-primary" %>
		<% end %>
	</div>




	</div>

</div>

