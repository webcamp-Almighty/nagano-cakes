 <div class="row">
	<%= render 'genrebar', genres: @genres %>
	<!-- ジャンル検索サイドバーの呼び出し -->
	<div class="col-xs-10">
		<!-- ジャンルidに紐づく商品を表示する-->
		<% if params[:genre_id] %>
			<h2><%= @genre.name %>一覧<span>（全<%= @items.count %>件）</span></h2>
		<% else %>
			<h2>商品一覧<span>（全<%= @items.count %>件）</span></h2>
		<% end %>

		<div class="row">
			<% @items.each do |item| %>
			<div class="col-xs-3">
				<%= link_to item_path(item) do %>
					<%= attachment_image_tag(item, :image, fallback: 'no_image.jpg', size: '220x165') %><br>
					<%= item.name %><br>
					￥<%= converting_to_jpy(item.price) %><br>

					<!-- いいね,ajax -->
					<div id="likes_buttons_<%= item.id %>">
						<%= render partial: 'favorites/favorite', locals: { item:item} %>
					</div>
				<% end %>
			</div>
			<% end %>
		</div>
		<h2>人気の商品</h2>
		  <div class="row">
           <!-- ランキング -->
           <% count = 1 %>
		    <% @item_ranking.each do |item| %>
			  <div class="col-xs-3">
			   <%= "いいね数 #{count}位" %>
				<%= link_to item_path(item) do %>
					<%= attachment_image_tag(item, :image, fallback: 'no_image.jpg', size: '220x165') %><br>
					<%= item.name %><br>
					￥<%= converting_to_jpy(item.price) %><br>
					<!-- いいな -->
                    <span class="glyphicon glyphicon-star color-red"><%= item.favorites.count%></span>
                    <% count += 1 %>
				<% end %>
			  </div>
			<% end %>
		  </div>
		<%#= @item_rank %>
		<div class="row">
			<div class="col-xs-6">
				<!--ページネーション機能ついか-->
				<%= paginate @items %>
			</div>
		</div>
	</div>
</div>
