<div class="row">
	<!--ジャンル検索の場合は、ジャンル一覧を表示する-->

	<div class="col-xs-4">

		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">ジャンル検索</h3>
		  </div>
		  <div class="panel-body">  <!--borderが消えない-->
		    <table class="table table-borderless">

			  <tbody>
			  		<% @genres.each do |genre| %>
			  		<tr>
			  		  <td><!--コントローラとビューはセットで考える.下の行の書き方でもok-->
				  		<%= link_to genre.name, items_path(genre_id: genre.id) %>
				  		<%#= link_to genre.name, items_path(id: genre.id) %>
				  	  </td>
			  		<% end %>
			  		</tr>
			  </tbody>
			</table>
		  </div>
		</div>

	</div>

	<div class="col-xs-8">
		<!-- ジャンルidに紐づく商品を表示する-->
		<% if params[:genre_id] %>
			<h2>ジャンル一覧<span>（全<%= @items.count %>件）</span></h2>
		<% else %>
			<h2>商品一覧<span>（全<%= @items.count %>件）</span></h2>
		<% end %>

			<% @items.each do |item| %>
				  <%= link_to item_path(item) do %>
				    <%= attachment_image_tag(item, :image, :fill, 60, 60, fallback: 'no_image.jpg', size: '65x65') %>
				  <% end %>
				  <%= item.name %>
				  <%= item.price %>
			  <% end %>


	</div>

	<!--ページネーション機能ついか-->
</div>


