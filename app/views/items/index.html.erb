<div class="row">
	<%= render 'genrebar', genres: @genres %>
	<!-- ジャンル検索サイドバーの呼び出し -->
	<div class="col-xs-10">
		<!-- ジャンルidに紐づく商品を表示する-->
		<% if params[:genre_id] %>
			<h2><%= @genre.name %>一覧<span>（全<%= @items.count %>件）</span></h2>
		<% else %>
			<h2>商品一覧<span>（全<%= @items.count %>件）</span></h2>
		<% end %>

		<div class="row">
			<% @items.each do |item| %>
			<div class="col-xs-3">
				<%= link_to item_path(item) do %>
					<%= attachment_image_tag(item, :image, fallback: 'no_image.jpg', size: '220x165') %><br>
					<%= item.name %><br>
					￥<%= converting_to_jpy(item.price) %>
				<% end %>
			</div>
			<% end %>
		</div>

	</div>
	<!--ページネーション機能ついか-->
</div>