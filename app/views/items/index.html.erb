<div class="row">
	<div class="col-xs-2">
	  <%= render 'items/genrebar', genres: @genres %>
	  <%= render 'homes/snslink' %>
	</div>
	<div class="col-xs-10">
		<!-- ジャンルidに紐づく商品を表示する-->
		<% if params[:genre_id] %>
			<p class="item-index"><%= @genre.name %>一覧<span class="item-count">（全<%= @items.count %>件）</span></p>
		<% else %>
			<p class="item-index">商品一覧<span class="item-count">（全<%= @items.count %>件）</span></p>
		<% end %>

		<div class="row">
			<% @items.each do |item| %>
			<div class="col-xs-3">
				<%= link_to item_path(item) do %>
					<%= attachment_image_tag(item, :image, fallback: 'no_image.jpg', size: '220x165') %><br>
					<%= item.name %><br>
					￥<%= converting_to_jpy(item.price) %>
				<% end %>
			</div>
			<% end %>
		</div>

	</div>
	<!--ページネーション機能ついか-->
</div>