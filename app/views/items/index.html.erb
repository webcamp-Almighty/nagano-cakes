<div class="row">
	<%= render 'genrebar', genres: @genres %>
	<!-- ジャンル検索サイドバーの呼び出し -->
	<div class="col-xs-8">
		<!-- ジャンルidに紐づく商品を表示する-->
		<% if params[:genre_id] %>
			<h2><%= @genre.name %>一覧<span>（全<%= @items.count %>件）</span></h2>
		<% else %>
			<h2>商品一覧<span>（全<%= @items.count %>件）</span></h2>
		<% end %>

			<% @items.each do |item| %>
				  <%= link_to item_path(item) do %>
				    <%= attachment_image_tag(item, :image, :fill, 60, 60, fallback: 'no_image.jpg', size: '65x65') %>
				  <% end %>
				  <%= item.name %>
				  <%= item.price %>
			  <% end %>


	</div>

	<!--ページネーション機能ついか-->
</div>


