<div class="row">
	<h3>注文情報確認</h3>

	<table class="col-xs-7 table-hover table-bordered item-table">
	  <thead>
	    <tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
	    </tr>
	  </thead>
	  <tbody>
	  	<!--カートで一時保存したデータを呼び出す-->
	    <% @cart_items.each do |cart_item| %>
	    <tr>
	    	<td>
	    		<%= attachment_image_tag(cart_item.item, :image,  fallback: 'no_image.jpg', size: '80x60') %>
	    		<%= cart_item.item.name %>
	    	</td>

			<td><%= converting_to_jpy(cart_item.item.price) %></td>
			<td><%= cart_item.number %></td>
			<td><%= converting_to_jpy(cart_item.item.price * cart_item.number) %></td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>

	<table class="col-xs-3  table-bordered sum-table">
	    <tr>
			<th>送料</th>
			<td><!--defaultで送料800円-->
			  <%= @order.shipping_fees %>
			</td>
	    </tr>
	    <tr>
	    	<th>商品合計</th>
			<td><!--商品合計-->
			  <%= converting_to_jpy(current_end_user.cart_item_sum) %>
			</td>
		</tr>
		<tr>
			<th>請求金額</th>
			<td><!--請求金額=送料+合計金額-->
				<!--total_priceカラムの意義とは-->
				<%#= @total_price %>
			  <%= converting_to_jpy(@order.shipping_fees + current_end_user.cart_item_sum) %>
			</td>
	    </tr>
	</table>
</div>

	<table class="table table-borderless">
	    <tr>
			<th>支払い方法</th>
			<td>
			<!--form_forで書いてるから,条件分岐いらないってこと?-->
			<!--条件分岐なしでも結果が変わらない-->
		      <% if @order.payment_method == 0 %>
                 <%= @order.payment_method_i18n %>
              <% else %>
                <%= @order.payment_method_i18n %>
              <% end %>
			</td>
	    </tr>
	    <tr>
			<th>お届け先</th>
			<td><!--ラジオボタンの番号によって表示を変える-->
				<%# if @order[:radio_button] != "2" %>
					〒<%= @order.postal_code %>
					<%= @order.address %>
					<%= @order.name %>
			</td>
	    </tr>

	</table>

	<!--hidden_field、最終的にユーザーの注文情報として保存する必要があるのはどの情報か-->
	<!--注文情報確定ボタン-->
	<div class="row">
		<%= form_with(model: @order,url: orders_path,local:true) do |f| %>
			<!--お届け先氏名 -->
			<%= f.hidden_field :name, :value => @order.name %>

			<!--支払い方法-->
			<%= f.hidden_field :payment_method, :value => @order.payment_method %>
			<!--お届け先-->
			<%= f.hidden_field :postal_code, :value => @order.postal_code %>
			<%= f.hidden_field :address, :value => @order.address %>
			<!--送料-->
			<%= f.hidden_field :shipping_fees, :value => @order.shipping_fees %>
			<!--請求金額-->
			<%#= f.hidden_field :total_price, value => @order.total_price %>
			<!--ラジオNo.-->
			<%#= f.hidden_field :radio_number, value => @order.radio_number %>

		<%= f.submit '購入を確定する', class: 'center-block btn btn-default btn-success' %>
		<% end %>
	</div>