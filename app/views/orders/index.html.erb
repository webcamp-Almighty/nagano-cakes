<h2>注文履歴一覧</h2>
<table class="table table-bordered">
    <thead>
    	<tr>
    		<th>注文日</th>
    		<th>配送先</th>
    		<th>注文商品</th>
    		<th>支払い金額</th>
    		<th>ステータス</th>
    		<th>注文詳細</th>
    	</tr>
    </thead>
    <tbody>
    	<!--each文で回して、データ取ってくる、関連付け必要-->
    	<% @orders.each do |order| %>
    	<tr>
    		<td><%= order.created_at %></td>

    		<!--ユーザーに紐づく配送先を表示する必要あり,修正必要-->
    		<td><%= order.address %></td>

    		<!--orderitemsの情報が欲しい-->
    		<td><%= order.name %></td>

    		<td><%= order.total_price %></td>

    		<td><%= order.order_status %></td>

    		<td><%= link_to '表示する', order_path(order), class: 'btn btn-default btn-primary' %></td>
    	</tr>
    	<% end %>

    </tbody>

</table>