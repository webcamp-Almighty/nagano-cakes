<h2>配送先編集</h2>
<%= form_for(@delivery, url: delivery_path) do |f| %>
<table>
	<tr>
		<th>郵便番号(ハイフンなし)</th>
		<td colspan="3"><%= f.text_field :postal_code %></td>
	</tr>
	<tr>
		<th>住所</th>
		<td colspan="3"><%= f.text_field :address %></td>
	</tr>
	<tr>
		<th>宛名</th>
		<td colspan="3"><%= f.text_field :name %></td>
	</tr>
	<tr>
		<th colspan="3"></th>
		<td><%= f.submit '編集する' %></td>
	</tr>
</table>
<% end %>