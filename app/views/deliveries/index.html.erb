<h2>配送先登録/一覧</h2>

<table class="new-deliveries-form">
	<% form_for(@delivery, url: deliveries_path) do |f| %>
	<tr>
		<th>郵便番号(ハイフンなし)</th>
		<td colspan="3"><%= f.text_field :postal_code %></td>
	</tr>
	<tr>
		<th>住所</th>
		<td colspan="3"><%= f.text_field :address %></td>
	</tr>
	<tr>
		<th>宛名</th>
		<td colspan="2"><%= f.text_field :name %></td>
		<td><%= f.submit '登録する' %></td>
	</tr>
	<% end %>
</table>

<table class="new-deliveries-form">
	<% deliveries_each do |delivery| %>
	<tr>
		<th>郵便番号</th>
		<th>住所</th>
		<th>宛名</th>
		<th></th>
	</tr>
	<tr>
		<td><%= @delivery.postal_code %></td>
		<td><%= @delivery.adress %></td>
		<td><%= @delivery.name %></td>
		<td>
			<%= link_to "編集する", edit_delivery_path, class: "btn btn-default btn-primary" %>
			<%= link_to "削除する", delivery_path, method: :delete, class: "btn btn-default btn-danger" %>
		</td>
	</tr>
	<% end %>
</table>
