<div class="container">
	<div class="row">
		<h4 class="col-md-2 col-md-offset-1">配送先登録/一覧</h4>
	</div>
	<div class="row">
		<table class="col-md-10">
			<%= form_for(@delivery, url: deliveries_path) do |f| %>
			<tr>
				<th>郵便番号(ハイフンなし)</th>
				<td colspan="3"><%= f.text_field :postal_code %></td>
			</tr>
			<tr>
				<th>住所</th>
				<td colspan="3"><%= f.text_field :address, :size => "60" %></td>
			</tr>
			<tr>
				<th>宛名</th>
				<td colspan="2"><%= f.text_field :name %></td>
				<td><%= f.submit '登録する', class: "btn btn-default btn-success" %></td>
			</tr>
			<% end %>
		</table>
	</div>

	<div class="row">
		<table class="col-md-10 table-hover" >
			<thead>
				<tr>
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @deliveries.each do |delivery| %>
				<tr>
					<td><%= delivery.postal_code %></td>
					<td><%= delivery.address %></td>
					<td><%= delivery.name %></td>
					<td>
						<%= link_to "編集する", edit_delivery_path(delivery), class: "btn btn-default btn-primary" %>
						<%= link_to "削除する", delivery_path(delivery), method: :delete, class: "btn btn-default btn-danger" %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
