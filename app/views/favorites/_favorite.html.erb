<% if end_user_signed_in? && item.favorited_by?(current_end_user) %><!-- ログインしてて、いいねしてる時 -->
	<%= link_to item_favorites_path(item), method: :delete, remote: true do %>
		<span class="glyphicon glyphicon-star"><%= item.favorites.count%></span>
	<% end %>

	<% elsif !end_user_signed_in? %><!-- ログインしてない時 -->
		<span class="glyphicon glyphicon-star"><%= item.favorites.count%></span>

	<% else %>
		<%= link_to item_favorites_path(item), method: :post, remote: true do %><!-- ログインしてて、いいねしてない時 -->
		<span class="glyphicon glyphicon-star-empty"><%= item.favorites.count %></span>
	<% end %>
<% end %>