<div class="row">
	<div class="col-xs-4">

		<!--画像サイズについて確認-->

		<%= attachment_image_tag(@item, :image, :fill, 200, 200, fallback: 'no_image.jpg', size: '250x200') %>
	</div>

	<div class="col-xs-8">
		<span><b>商品名</b>
		  <h4><%= @item.name %></h4>
		</span>
	</div>

	<div class="col-xs-8">
		<span><b>商品説明</b>
		  <h4><%= @item.introduction %></h4>
		</span>
	</div>

	<div class="col-xs-8">
		<span><b>ジャンル</b>
		  <h4><%= @item.genre.name %></h4>
		</span>
	</div>

	<div class="col-xs-8">
		<span><b>税込価格(税抜価格)</b>
			<!--小数点を切り捨てる/ &nbsp;は空白文字-->
			<h4><%= (BigDecimal(@item.price) * BigDecimal("1.1")).ceil %>&nbsp;(<%= @item.price %>)円</h4>
		</span>
	</div>

	<div class="col-xs-8">
		<span><b>販売ステータス</b>
			<h4>
			  	<% if @item.is_soldout == true %>
	  				売り切れ
	  			<% else %>
	  				販売中
	  			<% end %>
	  			<%= link_to "編集する", edit_admins_item_path, class: " btn btn-default", style: "border-radius: 50%" %>
	  		</h4>
	  	</span>
	</div>




