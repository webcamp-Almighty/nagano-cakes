<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
  	  <h3>商品一覧</h3>
  	<div class="text-right">
		<%= link_to "+", new_admins_item_path, class: " btn btn-default", style: "border-radius: 50%" %>
	</div>


	<table class="table table-hover table-inverse">
	  <thead>
	  	<tr>
	  		<th>商品ID</th>
	  		<th>商品名</th>
	  		<th>税抜価格</th>
	  		<th>ジャンル</th>
	  		<th>ステータス</th>
	  	</tr>
	  </thead>

	  <tbody>
	  	<% @items.each do |item| %>
	  	  <tr>
	  		<td><%= item.id %></td>
	  		<td><%= link_to item.name, admins_item_path(item.id) %></td>
	  		<td><%= item.price %></td>
	  		<td><%= item.genre.name %></td>
	  		<td>
	  			<% if item.is_soldout == true %>
	  				売り切れ
	  			<% else %>
	  				販売中
	  			<% end %>
	  		</td>
	  	  </tr>
	  	<% end %>
	  </tbody>
	</table>
	<%= paginate @items %>
  </div>
</div>