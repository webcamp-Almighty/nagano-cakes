<div class="row">
  <div class="col-xs-8  col-xs-offset-2">

  	<h1>商品一覧</h1>

	<table class="table table-hover table-inverse">
	  <thead>
	  	<tr>
	  		<th>商品ID</th>
	  		<th>商品名</th>
	  		<th>税抜価格</th>
	  		<th>ジャンル</th>
	  		<th>ステータス</th>
	  	</tr>
	  </thead>

	  <tbody>
	  	<% @items.each do |item| %>
	  	  <tr>
	  		<td><%= item.id %></td>
	  		<td><%= item.name %></td>
	  		<td><%= item.price %></td>
	  		<td><%= item.genre.name %></td>
	  		<td><%= item.is_soldout %></td><!--ステータスの表示-->
	  	  </tr>
	  	<% end %>

	  </tbody>


	</table>
  </div>
</div>