<div class="row">
  <div class="col-xs-8 col-xs-offset-2">

  	<h1>商品一覧</h1>
  	<!--商品一覧の下に変な表示が出るのはなぜ-->

	<table class="table table-hover table-inverse">
	  <thead>
	  	<tr>
	  		<th>商品ID</th>
	  		<th>商品名</th>
	  		<th>税抜価格</th>
	  		<th>ジャンル</th>
	  		<th>ステータス</th>
	  	</tr>
	  </thead>

	  <tbody>
	  	<% @items.each do |item| %>
	  	  <tr>
	  		<td><%= item.id %></td>
	  		<td><%= link_to item.name, item_path(item) %></td>
	  		<td><%= item.price %></td>
	  		<td><%= item.genre.name %></td>
	  		<td>
	  			<% if item.is_soldout == true %>
	  				売り切れ
	  			<% else %>
	  				販売中
	  			<% end %>
	  		</td><

	  	  </tr>
	  	<% end %>

	  </tbody>

	</table>
  </div>
</div>